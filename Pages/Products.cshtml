@page
@model OnlineShop.Pages.ProductsModel

<style>
    body {
        background-color: #f4f6f8;
    }

    .shop-container {
        display: flex;
        justify-content: center;
        padding: 40px 0;
    }

    .products {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        max-width: 1000px; /* controls left & right spacing */
        justify-content: center;
    }

    .product-card {
        background: white;
        border: 1px solid #ddd;
        padding: 15px;
        width: 220px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        text-align: center;
    }

        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 6px;
        }

        .product-card button {
            margin-top: 10px;
            padding: 8px 12px;
            border: none;
            background-color: #198754;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

            .product-card button:hover {
                background-color: #146c43;
            }
</style>

<h2 style="text-align:center;">Online Shop</h2>

<div class="shop-container">
    <div class="products">
        @foreach (var product in Model.Products)
        {
            <div class="product-card">
                <img src="/images/@product.ImageUrl" alt="@product.Name" />

                <h4>@product.Name</h4>
                <p>@product.Description</p>
                <p><strong>R @product.Price</strong></p>

                <button>Add to Cart</button>
            </div>
        }
    </div>
</div>
