@page
@model OnlineShop.Pages.CartModel

<h2>Your Cart</h2>

<table>
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Total</th>
    </tr>

    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>R @item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>R @(item.Product.Price* item.Quantity)</td>
        </tr>
    }
</table>
