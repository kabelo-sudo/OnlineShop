@page
@model OnlineShop.Pages.CartModel

<h2>Your Cart</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>R @item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>R @(item.Product.Price* item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>
    🧾 Total Items: <strong>@Model.TotalQuantity</strong>
</h4>

<h3>
    💰 Grand Total: <strong>R @Model.GrandTotal</strong>
</h3>
